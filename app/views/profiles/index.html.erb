<p id="notice"><%= notice %></p>

<h2>Profiles list(<span style="color:red; font-family:Arial;">admin</span>)</h2>

<div class="pad">
  <table>
    <thead>
        <tr style="text-decoration: underline;">
          <th>Name</th>
          <th>Lastname</th>
          <th>Age</th>
          <th>Location</th>
          <th>User ID</th>
          <th colspan="3"></th>
        </tr>
      </thead>
    
      <tbody>
        <% @profiles.each do |profile| %>
          <tr>
            <td><%= profile.name %></td>
            <td><%= profile.lastname %></td>
            <td><%= profile.age %></td>
            <td><%= profile.timezone %></td>
            <td><%= profile.user_id %></td>
            <td><%= link_to 'Show', profile %></td>
            <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<br>

