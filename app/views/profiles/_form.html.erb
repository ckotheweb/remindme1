<%= form_for(profile) do |f| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :lastname %>
    <%= f.text_field :lastname %>
  </div>

  <div class="field">
    <%= f.label :age %>
    <%= f.number_field :age %>
  </div>
  
  <div class="field">
    <%= f.label :location %>
    <%= f.time_zone_select :timezone, nil, default: Time.zone.name %>
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id, value: User.find_by_id(@profile.user_id).id  %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
