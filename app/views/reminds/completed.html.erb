<p id="notice"><%= notice %></p>

<h1>Completed Reminders</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Title</th>
      <th>Was sent to you on</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @reminds.where(:sent => true).each do |remind| %>
      <tr>
        <td><%= Email.find_by_id(remind.email_id).email %></td>
        <td><%= remind.title %></td>
        <td><%= remind.schedule.strftime("%Y-%m-%d %H:%M:00") %></td>
        <td><%= link_to 'Show', remind %></td>
        <td><%= link_to 'Edit', edit_remind_path(remind) %></td>
        <td><%= link_to 'Destroy', remind, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to "Scheduled reminders", reminds_path %>
<br>

<h3><%= link_to 'Create new', new_remind_path %></h3>
