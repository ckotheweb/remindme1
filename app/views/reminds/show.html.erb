<p id="notice"><%= notice %></p>
<div class="main">
  <% if current_user.email == Email.find_by_id(@remind.email_id).email %>
    <p>
      <strong>Email:</strong>
      <%= Email.find_by_id(@remind.email_id).email %>
    </p>
    
    <p>
      <strong>Title:</strong>
      <%= @remind.title %>
    </p>
    
    <p>
      <strong>Body:</strong>
      <div class='textareaaa'>
      <%= @remind.body.html_safe %>
      </div>
    </p>
    
    <p>
      <strong>Schedule:</strong>
      <% Time.use_zone(Profile.find_by_user_id(current_user.id).timezone) do %>
        <%= @remind.schedule %>
      <% end %>
    </p>
  <% else %>
    <h2>You are not authorized to view this reminder.</h2>
  <% end %>
  <%= link_to 'Back', reminds_path %>
</div>